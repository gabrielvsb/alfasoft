@model IEnumerable<alfasoft.Models.ContactModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Contact List</h1>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" title="Edit contact" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> 
                <a asp-action="Details" class="btn btn-secondary" title="Details from contact" asp-route-id="@item.Id"><i class="bi bi-file-earmark-medical-fill"></i></a>
                <a asp-action="Delete" class="btn btn-danger" title="Delete contact" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
